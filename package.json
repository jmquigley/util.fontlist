{
	"name": "util.fontlist",
	"version": "0.0.15",
	"author": "jmquigley <jmquigley@outlook.com>",
	"description": "Detects the fonts that are available to the browser on the current system",
	"private": false,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/jmquigley/util.fontlist"
	},
	"bugs": {
		"url": "https://github.com/jmquigley/util.fontlist/issues"
	},
	"engines": {
		"node": ">=7.x"
	},
	"main": "./index.umd.min.js",
	"module": "./index.es.min.js",
	"types": "./index.d.ts",
	"files": [
		"fontlist.json",
		"index.*.min.js",
		"index.d.ts"
	],
	"devDependencies": {
		"@babel/cli": "^7.2.3",
		"@babel/core": "^7.3.4",
		"@babel/plugin-transform-modules-umd": "^7.2.0",
		"@babel/preset-env": "^7.3.4",
		"@babel/preset-typescript": "^7.3.3",
		"@babel/runtime": "^7.3.4",
		"@types/node": "^11.10.5",
		"babel-minify": "^0.5.0",
		"babel-preset-minify": "^0.5.0",
		"debug": "^4.1.1",
		"prettier": "^1.16.4",
		"tslint": "^5.13.1",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.3.3333",
		"util.pkgwrap": "^0.0.104"
	},
	"scripts": {
		"all": "yarn install && yarn build",
		"build": "yarn clean && yarn lint && yarn prettier && yarn build:es && yarn build:umd",
		"build:es": "tsc -p . && minify index.js --out-file index.es.min.js",
		"build:umd": "babel index.js --out-file index.umd.min.js",
		"clean": "pkgwrap --clean",
		"clean:dist": "yarn clean && rimraf node_modules/ yarn.lock",
		"lint": "pkgwrap --lint",
		"prepublishOnly": "yarn run all",
		"prettier": "prettier --write \"**/*.{ts,tsx,js,json,yaml,yml,css}\""
	}
}
